{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Deno Run SSEServer",
            "type": "shell",
            "command": "deno",
            "options": {
                "cwd": "./",
                "env": {
                    "DEBUG": "false", 
                    "DENO_REGION" : "localhost"
                },
            },
            "args": [
                "run",
                "--watch",
                "--unstable",
                "--allow-env", 
                "--allow-read",
                "--allow-net", 
                "${workspaceFolder}/server.ts"
            ],
            "windows": {
                "options": {
                    "cwd": "./"
                },
                "command": "deno",
                "args": [
                    "run",
                    "--watch",
                    "--unstable",
                    "--allow-env",
                    "--allow-read",
                    "--allow-net",  
                    "${workspaceFolder}\\server.ts"
                ]
            },
            "group": "none",
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "clear": true,
                "showReuseMessage": false
            },
            "problemMatcher": []
        }
    ]
}